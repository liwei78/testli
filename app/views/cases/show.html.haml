- model_class = Case
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @case.content
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @case.state

.form-actions
  = link_to 'Back Scenario', scenario_path(@scenario), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_scenario_case_path(@scenario, @case), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), scenario_case_path(@scenario, @case), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
