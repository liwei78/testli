= simple_form_for @logic, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :content, as: :text, input_html: {rows: 5, class: 'input-xxlarge'}
  = f.input :position
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), logics_path, :class => 'btn'
