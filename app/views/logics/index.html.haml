- model_class = Logic
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th(width='10%') ID
      %th= model_class.human_attribute_name(:title)
      %th(width='20%')=t '.actions', :default => t("helpers.actions")
  %tbody
    - @logics.each do |logic|
      %tr
        %td= logic.id
        %td= link_to logic.title, logic_path(logic)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_logic_path(logic), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), logic_path(logic), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_logic_path, :class => 'btn btn-primary'
