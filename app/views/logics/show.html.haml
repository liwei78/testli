- model_class = Logic
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.form-actions
  = link_to t('.list_all', :default => t("helpers.links.list_all")), logics_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_logic_path(@logic), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), logic_path(@logic), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @logic.title
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @logic.content

%table.table.table-striped
  %thead
    %tr
      %th(width='10%') ID
      %th Scenario Content
      %th(width='20%')=t '.actions', :default => t("helpers.actions")
  %tbody
    - @scenarios.each do |scenario|
      %tr
        %td= scenario.id
        %td= link_to scenario.content, scenario_path(scenario)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_scenario_path(scenario), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), scenario_path(scenario), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

