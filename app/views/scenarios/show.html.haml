- model_class = Scenario
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

.form-actions
  = link_to 'Add Test Case', new_scenario_case_path(@scenario), :class => 'btn btn-primary'

  = link_to t('.back', :default => t("helpers.links.back")), scenarios_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_scenario_path(@scenario), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), scenario_path(@scenario), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'

%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @scenario.content
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @scenario.position

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @cases.each do |test_case|
      %tr
        %td= link_to test_case.id, scenario_case_path(@scenario, test_case)
        %td= test_case.content
        %td= test_case.state_view
        %td=l test_case.created_at.to_date
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_scenario_case_path(@scenario, test_case), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), scenario_case_path(@scenario, test_case), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
